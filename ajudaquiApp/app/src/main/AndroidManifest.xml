            android:name="studio.brunocasamassa.ajudaquioficial.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="studio.brunocasamassa.ajudaquioficial.payment.PaymentActivity3"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name="studio.brunocasamassa.ajudaquioficial.payment.TermosActivity"
            android:screenOrientation="portrait"></activity>

        <activity android:name="studio.brunocasamassa.ajudaquioficial.SearchableActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@layout/searchable" />
        </activity>

        <activity android:name="studio.brunocasamassa.ajudaquioficial.PurchaseActivity" />

        <service android:name="studio.brunocasamassa.ajudaquioficial.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name="studio.brunocasamassa.ajudaquioficial.MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
