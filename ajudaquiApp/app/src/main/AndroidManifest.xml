        <activity
            android:name="studio.brunocasamassa.ajudaquioficial.helper.MainIntroActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name="studio.brunocasamassa.ajudaquioficial.TagsList"
            android:screenOrientation="portrait" />
        <activity
            android:name="studio.brunocasamassa.ajudaquioficial.FullScreenImageActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="studio.brunocasamassa.ajudaquioficial.ListaAdmins"
            android:screenOrientation="portrait" />
        <activity
            android:name="studio.brunocasamassa.ajudaquioficial.PedidosActivity"
            android:largeHeap="true"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@layout/searchable"></meta-data>

        </activity>

        <activity
            android:name="studio.brunocasamassa.ajudaquioficial.FaqActivity"
            android:screenOrientation="portrait" />
