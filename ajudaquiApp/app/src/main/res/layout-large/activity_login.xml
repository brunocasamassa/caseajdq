<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_mainactivity"
    tools:context="studio.brunocasamassa.ajudaquioficial.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:textSize="25dp"
        android:text="Que bom ver você de novo!"
        android:textColor="@android:color/background_light"
        tools:text="Que bom ver você de novo!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@android:color/background_light"
        android:hint="Senha"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email" />


    <Button
        android:id="@+id/entrar"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@android:color/background_light"
        android:text="Entrar"
        android:textColor="@color/colorBackground"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/senha"
        android:layout_alignStart="@+id/senha" />


    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/lostPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="20dp"
        android:text="ESQUECI MINHA SENHA"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/entrar"
        android:layout_alignStart="@+id/textView2" />
</RelativeLayout>
