<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_principal_configuracoes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBackground"
        app:titleTextColor="@android:color/white"></android.support.v7.widget.Toolbar>


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImg"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:layout_below="@+id/toolbar_principal_configuracoes"
        android:layout_alignStart="@+id/premiumTag"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rankedUserPontosConquistados"
        android:layout_marginStart="19dp"
        android:text="  pontos conquistados  "
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="  pontos conquistados" />

    <TextView
        android:id="@+id/rankedUserPontosConquistados"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/profileName"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignEnd="@+id/premiumTag"
        android:layout_alignRight="@+id/premiumTag"
        android:layout_below="@+id/rankedPedidosAtendidos"
        android:text="  pedidos atendidos  "
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="  pedidos atendidos" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="   pedidos            feitos"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="   pedidos            feitos"
        android:layout_below="@+id/rankedPedidosFeitos"
        android:layout_alignRight="@+id/rankedPedidosFeitos"
        android:layout_alignEnd="@+id/rankedPedidosFeitos" />

    <TextView
        android:id="@+id/rankedPedidosAtendidos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/rankedPedidosFeitos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        android:layout_marginEnd="34dp"
        android:layout_above="@+id/textView7"
        android:layout_alignRight="@+id/horizontal_scroll"
        android:layout_alignEnd="@+id/horizontal_scroll"
        android:layout_marginRight="34dp" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Android User"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Android User"
        android:layout_below="@+id/profileImg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/premiumTag"
        android:layout_width="80dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/free_icon"
        android:layout_below="@+id/profileName"
        android:layout_centerHorizontal="true" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:scrollbars="none"
        android:requiresFadingEdge="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_alignBottom="@+id/view"
        android:layout_centerHorizontal="true">

    <LinearLayout
        android:showDividers="beginning"
        android:id="@+id/linear"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_marginTop="325dp"
        android:layout_width="450dp"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:id="@+id/view2" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:textSize="16dp"
        android:text="Medalhas"
        android:textStyle="bold"
        tools:text="Medalhas"
        android:id="@+id/textView11"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/horizontal_scroll"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <View
        android:layout_marginTop="440dp"
        android:layout_width="450dp"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:id="@+id/view" />
    <TextView
        android:layout_width="120dp"
        android:layout_height="22dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Notificações"
        tools:text="Notificações"
        android:id="@+id/textView12"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/horizontal_scroll"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />


    <ListView
        android:id="@+id/perfil_notificacoes"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:requiresFadingEdge="none"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ListView>


</RelativeLayout>

