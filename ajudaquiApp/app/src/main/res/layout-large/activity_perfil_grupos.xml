<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="studio.brunocasamassa.ajudaquioficial.PerfilGruposActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_principal_configuracoes"
        android:layout_width="415dp"
        android:layout_height="54dp"
        android:background="@color/colorBackground"
        app:titleTextColor="@android:color/white"
        tools:layout_editor_absoluteX="-2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-5dp"></android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rankedProfileImg"
        android:layout_width="158dp"
        android:layout_height="148dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="2dp"
        app:civ_border_color="#ffffff"
        android:layout_below="@+id/toolbar_principal_configuracoes"
        android:layout_alignStart="@+id/premiumTag"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/rankedProfileName"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/rankedProfileName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/rankedProfileName"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_principal_configuracoes"
        app:layout_constraintVertical_bias="0.571"
        app:layout_constraintHorizontal_bias="0.504" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rankedUserPontosConquistados"
        android:text="  pontos conquistados  "
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="  pontos conquistados"
        app:layout_constraintRight_toLeftOf="@+id/textView7"
        android:layout_marginRight="13dp"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/rankedUserPontosConquistados"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/rankedUserPontosConquistados"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textView556"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rankedUserPontosConquistados"
        android:text="  posicao no ranking  "
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="  posicao no ranking"
        app:layout_constraintRight_toLeftOf="@+id/textView5"
        android:layout_marginRight="18dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/rankingPosition"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/rankingPosition"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/rankedUserPontosConquistados"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        android:layout_below="@+id/profileName"
        android:layout_alignEnd="@+id/textView5"
        app:layout_constraintRight_toLeftOf="@+id/rankedPedidosAtendidos"
        android:layout_marginRight="32dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/rankedProfileName" />

    <TextView
        android:id="@+id/rankingPosition"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        android:layout_below="@+id/profileName"
        android:layout_alignEnd="@+id/textView5"
        app:layout_constraintRight_toLeftOf="@+id/rankedUserPontosConquistados"
        android:layout_marginRight="47dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/rankedProfileName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignEnd="@+id/premiumTag"
        android:layout_alignRight="@+id/premiumTag"
        android:layout_below="@+id/rankedPedidosAtendidos"
        android:text="  pedidos atendidos  "
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="  pedidos atendidos"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/rankedPedidosAtendidos"
        app:layout_constraintRight_toLeftOf="@+id/textView8"
        android:layout_marginRight="9dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/rankedPedidosAtendidos"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:text="   pedidos            feitos"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="   pedidos            feitos"
        android:layout_below="@+id/rankedPedidosFeitos"
        android:layout_alignRight="@+id/rankedPedidosFeitos"
        android:layout_alignEnd="@+id/rankedPedidosFeitos"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/rankedPedidosFeitos"
        android:layout_marginLeft="-9dp"
        app:layout_constraintLeft_toLeftOf="@+id/rankedPedidosFeitos" />

    <TextView
        android:id="@+id/rankedPedidosAtendidos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true"
        app:layout_constraintRight_toLeftOf="@+id/rankedPedidosFeitos"
        android:layout_marginRight="24dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/rankedProfileName" />


    <TextView
        android:id="@+id/rankedPedidosFeitos"
        android:layout_width="68dp"
        android:layout_height="62dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        android:layout_above="@+id/textView7"
        android:layout_alignRight="@+id/horizontal_scroll"
        android:layout_alignEnd="@+id/horizontal_scroll"
        android:layout_marginRight="27dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/rankedProfileName" />

    <View
        android:layout_width="450dp"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:id="@+id/view2"
        tools:layout_editor_absoluteX="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="235dp" />


    <TextView
        android:layout_width="309dp"
        android:layout_height="51dp"
        android:textColor="@color/colorBackground"
        android:textStyle="bold"
        android:textSize="17dp"
        android:id="@+id/adminButton"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="129dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:textColor="@color/accent"
        android:textStyle="bold"
        android:textSize="17dp"
        android:id="@+id/removeButton"
        android:text=""
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/adminButton"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/adminButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/adminButton"
        app:layout_constraintHorizontal_bias="0.488" />

    <TextView
        android:id="@+id/rankedProfileName"
        android:layout_width="398dp"
        android:layout_height="37dp"
        android:text="Android User"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Android User"
        android:layout_below="@+id/profileImg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout_editor_absoluteX="5dp"
        android:layout_marginBottom="125dp"
        app:layout_constraintBottom_toTopOf="@+id/view2" />


</android.support.constraint.ConstraintLayout>
