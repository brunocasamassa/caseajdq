<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_create_group"
        android:layout_width="645dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorBackground"
        android:visibility="visible"
        app:titleTextColor="@android:color/white"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"></android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/import_donation_img"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/add_group_logo"
        app:civ_border_color="@color/md_white_1000"
        app:civ_border_width="2dp"
        android:layout_below="@+id/toolbar_create_group"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_create_group"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/addgroups_icon"
        android:layout_alignTop="@+id/create_group_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="179dp"
        android:layout_height="22dp"
        android:layout_alignLeft="@+id/import_donation_img"
        android:layout_alignStart="@+id/import_donation_img"
        android:layout_below="@+id/import_donation_img"
        android:layout_marginLeft="8dp"
        android:text="Insira uma foto"
        android:textAlignment="textStart"
        android:textSize="12dp"
        android:translationX="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/import_donation_img"
        app:layout_constraintRight_toRightOf="@+id/import_donation_img"
        app:layout_constraintTop_toBottomOf="@+id/import_donation_img"
        app:layout_constraintHorizontal_bias="0.406"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/create_group_name"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="Nome do Grupo"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:overScrollMode="always"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintLeft_toRightOf="@+id/imageView7"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/create_group_description"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:hint="Descricao do Grupo"
        android:textSize="15dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:translationX="10dp"
        android:requiresFadingEdge="vertical"
        android:layout_below="@+id/imageView7"
        android:layout_alignLeft="@+id/create_group_name"
        android:layout_alignStart="@+id/create_group_name"
        app:layout_constraintTop_toBottomOf="@+id/create_group_name"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:scrollbars="vertical"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/create_group_name"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-15dp" />


    <Button
        android:id="@+id/create_group_button"
        android:layout_width="445dp"
        android:layout_height="wrap_content"
        android:text="CRIAR GRUPO"
        android:background="@color/colorBackground"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="CRIAR GRUPO"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="183dp"
        android:layout_height="33dp"
        android:text="Grupo fechado"
        android:id="@+id/textView17"
        android:layout_below="@+id/create_group_description"
        android:layout_marginTop="43dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/create_group_description"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/create_group_name"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="272dp"
        android:layout_height="58dp"
        android:id="@+id/description_closed"
        android:textColor="@android:color/darker_gray"
        android:text="Quando seu grupo Ã© fechado, apenas pessoas convidadas ou aprovadas pelo administrador podem participar"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        app:layout_constraintLeft_toLeftOf="@+id/textView17"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/create_group_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.29"
        android:layout_marginEnd="8dp" />

   <ImageView
       android:layout_width="38dp"
       android:layout_height="38dp"
       android:src="@drawable/ic_lock"
       android:layout_marginTop="158dp"
       app:layout_constraintTop_toBottomOf="@+id/imageView7"
       android:id="@+id/imageView4"
       android:layout_marginLeft="32dp"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginStart="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="off  /  on"
        android:textSize="10dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/switch1"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/switch1"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        app:layout_constraintHorizontal_bias="1.0" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView17"
        android:layout_toRightOf="@+id/import_donation_img"
        android:layout_toEndOf="@+id/import_donation_img"
        app:layout_constraintLeft_toRightOf="@+id/textView17"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView17"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView17"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.862"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>