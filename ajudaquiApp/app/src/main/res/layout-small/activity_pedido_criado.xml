<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_my_pedido"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/chat_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="30dp"
        android:src="@drawable/pedido_chat_icon"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/toolbar_pedido_criado"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/toolbar_pedido_criado"
        app:layout_constraintTop_toTopOf="@+id/toolbar_pedido_criado"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_pedido_criado"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintVertical_bias="0.875" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_pedido_criado"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorBackground"
        android:visibility="visible"
        app:titleTextColor="@android:color/white"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="20dp"
        app:elevation="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"></android.support.v7.widget.Toolbar>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Nome Pedido"
       tools:text="Nome Pedido"
       android:textSize="30dp"
       android:textColor="@color/colorBackground"
       android:layout_marginLeft="32dp"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginStart="32dp"
       android:id="@+id/nome_pedido_criado"
       android:layout_marginTop="20dp"
       app:layout_constraintTop_toBottomOf="@+id/toolbar_pedido_criado"
       android:layout_marginRight="8dp"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       android:layout_marginEnd="8dp" />



    <TextView
        android:layout_width="291dp"
        android:layout_height="157dp"
        android:textColor="@android:color/darker_gray"
        android:text="Atmos prothos darthus redmis def akbhar let sharmut aire feik prostagma rulamé Atmos prothos darthus redmis def akbhar let sharmut aire feik prostagma rulamé Atmos prothos darthus redmis def akbhar let sharmut aire feik prostagma rulamé"
        tools:text="Atmos prothos darthus redmis def akbhar let sharmut aire feik prostagma rulamé Atmos prothos darthus redmis def akbhar let sharmut aire feik prostagma rulamé Atmos prothos darthus redmis def akbhar let sharmut aire feik prostagma rulamé"
        android:id="@+id/descricao_pedido_criado"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/nome_pedido_criado"
        app:layout_constraintLeft_toLeftOf="@+id/nome_pedido_criado"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp" />


 <View
     android:layout_width="450dp"
     android:layout_height="1dp"
     android:background="#c0c0c0"
     android:id="@+id/view25"
     tools:layout_editor_absoluteX="-18dp"
     android:layout_marginTop="69dp"
     app:layout_constraintTop_toBottomOf="@+id/descricao_pedido_criado" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="27dp"
        android:textColor="#c0c0c0"
        tools:text="TAGS"
        android:text="TAGS"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView13"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tags_pedido_categoria_criado"
        android:layout_marginStart="32dp" />

    <View
        android:layout_width="450dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:id="@+id/view2"
        tools:layout_editor_absoluteX="-18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/status_image_criado" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:textColor="#c0c0c0"
        tools:text="STATUS"
        android:textStyle="bold"
        android:text="STATUS"
        android:textSize="15dp"
        android:id="@+id/textView14"
        app:layout_constraintLeft_toLeftOf="@+id/descricao_pedido_criado"
        app:layout_constraintTop_toBottomOf="@+id/view25" />

    <ImageView
        android:layout_width="154dp"
        android:layout_height="29dp"
        android:id="@+id/status_image_criado"
        android:src="@drawable/tag_aberto"
        android:layout_marginRight="248dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView14"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="248dp" />

    <me.gujun.android.taggroup.TagGroup
        android:layout_width="328dp"
        android:layout_height="29dp"
        android:id="@+id/tags_pedido_categoria_criado"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:atg_backgroundColor="@color/md_white_1000"
        app:atg_textColor="@android:color/darker_gray"
        app:atg_textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"></me.gujun.android.taggroup.TagGroup>

    <View
        android:layout_width="450dp"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:id="@+id/view3"
        tools:layout_editor_absoluteX="-18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="130dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tags_pedido_categoria_criado"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="27dp"
        android:textColor="#c0c0c0"
        tools:text="GRUPO"
        android:text="GRUPO"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tags_pedido_grupo_criado"
        android:layout_marginStart="32dp" />

    <me.gujun.android.taggroup.TagGroup
        android:layout_width="326dp"
        android:layout_height="36dp"
        android:id="@+id/tags_pedido_grupo_criado"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="21dp"
        app:atg_backgroundColor="@color/colorBackground"
        app:atg_textColor="@android:color/white"
        app:atg_textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"></me.gujun.android.taggroup.TagGroup>

    <Button
        android:id="@+id/finalizar_pedido_criado"
        android:layout_width="415dp"
        android:layout_height="48dp"
        android:text="FINALIZAR PEDIDO"
        android:background="@color/colorBackground"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:text="FINALIZAR PEDIDO"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>