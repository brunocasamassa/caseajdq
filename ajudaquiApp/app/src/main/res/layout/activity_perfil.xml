<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_principal_configuracoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"></android.support.v7.widget.Toolbar>


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileImg"
        android:layout_width="104dp"
        android:layout_height="99dp"
        android:background="@drawable/layout_bg"
        android:backgroundTint="@color/md_white_1000"
        android:layout_alignStart="@+id/premiumTag"
        android:layout_below="@+id/toolbar_principal_configuracoes"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        app:civ_border_color="@android:color/transparent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_principal_configuracoes"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rankedUserPontosConquistados"
        android:text="pontos\nconquistados"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="pontos\nconquistados"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/rankedUserPontosConquistados"
        app:layout_constraintRight_toRightOf="@+id/rankedUserPontosConquistados"
        app:layout_constraintTop_toBottomOf="@+id/rankedUserPontosConquistados"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/rankedUserPontosConquistados"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/profileName"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="31dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/user_credits" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignEnd="@+id/premiumTag"
        android:layout_alignRight="@+id/premiumTag"
        android:layout_below="@+id/rankedPedidosAtendidos"
        android:text="pedidos\natendidos"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="pedidos\natendidos"
        app:layout_constraintLeft_toLeftOf="@+id/rankedPedidosAtendidos"
        app:layout_constraintRight_toRightOf="@+id/rankedPedidosAtendidos"
        app:layout_constraintTop_toBottomOf="@+id/rankedPedidosAtendidos" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rankedPedidosFeitos"
        android:layout_alignRight="@+id/rankedPedidosFeitos"
        android:layout_below="@+id/rankedPedidosFeitos"
        android:text="pedidos\nfeitos"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:text="pedidos\nfeitos"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/rankedPedidosFeitos"
        app:layout_constraintRight_toRightOf="@+id/rankedPedidosFeitos"
        app:layout_constraintTop_toBottomOf="@+id/rankedPedidosFeitos"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/rankedPedidosAtendidos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        app:layout_constraintLeft_toRightOf="@+id/rankedUserPontosConquistados"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/rankedPedidosFeitos"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.523"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/user_credits"
        android:layout_marginTop="8dp" />


    <TextView
        android:id="@+id/rankedPedidosFeitos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/textView7"
        android:layout_alignEnd="@+id/horizontal_scroll"
        android:layout_alignRight="@+id/horizontal_scroll"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="30sp"
        android:textStyle="bold"
        android:translationY="20dp"
        android:typeface="monospace"
        tools:text="0"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/user_credits" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá"
        android:textAlignment="center"
        android:textColor="@color/colorBackground"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Olá"
        android:layout_below="@+id/profileImg"
        android:layout_alignRight="@+id/rankedPedidosAtendidos"
        android:layout_alignEnd="@+id/rankedPedidosAtendidos"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/profileImg"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/profileImg"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintTop_toBottomOf="@+id/profileImg"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp" />


    <ImageView
        android:id="@+id/premiumTag"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/profileName"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/free_icon"
        tools:layout_editor_absoluteY="216dp"
        tools:layout_editor_absoluteX="263dp"/>


    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textSize="14dp"
        android:textColor="@color/colorBackground"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textAlignment="center"
        android:id="@+id/user_credits"
        android:layout_below="@+id/profileName"
        android:layout_toRightOf="@+id/rankedUserPontosConquistados"
        android:layout_toEndOf="@+id/rankedUserPontosConquistados"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/profileName"
        app:layout_constraintRight_toRightOf="@+id/profileName"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintTop_toBottomOf="@+id/profileName"
        android:layout_marginStart="8dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="450dp"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        tools:layout_editor_absoluteX="-20dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="100dp"
        android:layout_height="22dp"
        android:layout_above="@+id/horizontal_scroll"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:text="Medalhas"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:text="Medalhas"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <View
        android:id="@+id/view"
        android:layout_width="450dp"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        tools:layout_editor_absoluteX="-18dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="120dp"
        android:layout_height="22dp"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/horizontal_scroll"
        android:text="Notificações"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:text="Notificações"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <ListView
        android:id="@+id/perfil_notificacoes"
        android:layout_width="415dp"
        android:layout_height="141dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:requiresFadingEdge="none"
        app:layout_constraintLeft_toLeftOf="@+id/textView12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.478"></ListView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/horizontal_scroll"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/view"
        android:layout_centerHorizontal="true"
        android:scrollbars="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/textView11"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.4"
        android:layout_marginEnd="8dp"></android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>

