<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background_login_activity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColorHint="@color/md_white_1000"
        android:id="@+id/cadastro_senhaConfirm"
        android:hint="Confirme sua senha:"
        android:layout_below="@+id/cadastro_senha"
        android:layout_alignLeft="@+id/cadastro_senha"
        android:layout_alignStart="@+id/cadastro_senha"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_senha"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!-- <include android:id="@+id/toolbar"
        layout="@layout/activity_hello">
    </include> -->

    <EditText
        android:id="@+id/cadastro_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColorHint="@color/md_white_1000"
        android:hint="Digite sua senha:"
        android:inputType="textPassword"
        android:layout_below="@+id/cadastro_email"
        android:layout_alignLeft="@+id/cadastro_email"
        android:layout_alignStart="@+id/cadastro_email"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_nome"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cadastro_email"
        android:textColorHint="@color/md_white_1000"
        android:hint="Digite seu e-mail:"
        android:layout_below="@+id/cadastro_nome"
        android:layout_alignStart="@+id/cadastro_nome"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_img"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginStart="14dp"
        android:id="@+id/cadastro_nome"
        android:hint="Digite seu nome:"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:textColorHint="@color/md_white_1000"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_email"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

<!--
    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:text="Insira uma foto"
        android:layout_below="@+id/cadastro_img"
        android:id="@+id/textView13"
        tools:layout_editor_absoluteX="130dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_img" />
-->

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/adduserlogo"
        android:id="@+id/cadastro_img"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/md_teal_A100"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/buttonValidarCadstro"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:text="CADASTRAR"
        android:textSize="25dp"
        android:textColor="@color/colorBackground"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/cadastro_senhaConfirm" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/cadastro_nome"
        android:layout_alignStart="@+id/cadastro_nome"
        android:layout_alignTop="@+id/cadastro_img"
        android:background="@color/cardview_shadow_end_color"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:layout_toStartOf="@+id/cadastro_img"
        tools:layout_editor_absoluteY="4dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>