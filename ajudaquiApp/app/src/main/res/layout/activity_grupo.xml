<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/imageView6"
        style="@style/Animation.Design.BottomSheetDialog"
        android:layout_width="340dp"
        android:layout_height="190dp"
        android:baseline="@dimen/activity_vertical_margin"
        android:elevation="0dp"
        android:fadingEdge="vertical"
        android:requiresFadingEdge="vertical"
        app:srcCompat="@color/colorBackground"
        android:layout_below="@+id/toolbar_principal_configuracoes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_principal_configuracoes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBackground"
        app:titleTextColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></android.support.v7.widget.Toolbar>


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/groupImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/add_group_logo"
        app:civ_border_color= "@android:color/transparent"
        android:layout_below="@+id/groupName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_principal_configuracoes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="group example"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="GROUP NAME" />

    <TextView
        android:id="@+id/grupoDescricao"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="jbklçlkjhjjklçkjklçkjjklklçkjklkjklçkjjklçkjjklçkjdjddjfdjfdifjfjdkfdkfjdkjffjnvfvvisvmksvsvknvkvvknvkvnfjvnfjvnfkvnfvnfjvnfnvnfnvjfnvfnvfvnjfnvfjnvfknvfvnfjnvfnvfkvnfjvnfjvnfnvfnvfjnvjnvfj"
        android:textAlignment="center"
        android:textSize="15sp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/imageView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:text="Membros:"
        android:layout_gravity="end"
        android:textAlignment="textEnd"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        tools:text="Membros: "
        android:layout_alignBaseline="@+id/qtdMembros"
        android:layout_alignBottom="@+id/qtdMembros"
        android:layout_alignLeft="@+id/groupImg"
        android:layout_alignStart="@+id/groupImg"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:translationX="25dp"
        app:srcCompat="@drawable/lockedgroup"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/grupoDescricao"
        android:layout_alignRight="@+id/qtdMembros"
        android:layout_alignEnd="@+id/qtdMembros" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Este é um grupo fechado. Você pode pedir sua solicitação para o administrador do grupo"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:text="Este é um grupo fechado. Você pode pedir sua solicitação para o administrador do grupo"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/botaoSolicitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOLICITAR PARTICIPAÇÃO"
        android:textColor="@color/md_white_1000"
        android:textSize="20dp"
        android:background="@color/colorBackground"
        android:textStyle="bold"
        tools:text="SOLICITAR PARTICIPAÇÃO"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/qtdMembros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:layout_below="@+id/groupImg"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />


</RelativeLayout>

